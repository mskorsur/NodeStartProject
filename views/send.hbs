        <div class="col-xs-3">
            <input type="text" class="form-control" name="courses">
        </div>
    </div>

    <div class="form-group">
        <label for="courses" class="col-sm-2 control-label">Course #3</label>
        <div class="col-xs-3">
            <input type="text" class="form-control" name="courses">
        </div>
    </div>

